<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="10dp"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_detergent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoblack"
                android:textSize="30dp"
                android:text="eNJe Laundry"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#2C2B2B" />
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoblack"
                android:text="Aplikasi Laundry Nurul Jadid"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#807E7E" />
            <LinearLayout
                android:layout_marginTop="50dp"
                android:background="@drawable/garis"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxStrokeWidth="0dp"
                    android:textColorHint="#2dcc70"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/txtUser"
                        android:inputType="textPersonName"
                        android:backgroundTint="#00000000"
                        android:hint="Nama Pengguna"
                        android:fontFamily="@font/robotomedium"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:background="@drawable/garis"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    app:boxStrokeWidth="0dp"
                    android:textColorHint="#2dcc70"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/txtPassword"
                        android:inputType="textPassword"
                        android:backgroundTint="#00000000"
                        android:hint="Masukkan Kata Sandi"
                        android:fontFamily="@font/robotoblack"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:background="@drawable/garis"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="8dp"
                    android:src="@drawable/ic_gear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnLogin"
                android:text="Login"
                android:textColor="#fff"
                android:fontFamily="@font/robotoblack"
                android:background="@drawable/gr"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </FrameLayout>
</androidx.core.widget.NestedScrollView>