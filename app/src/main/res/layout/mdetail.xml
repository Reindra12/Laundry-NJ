<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center|left"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/bback"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="right|center"
            android:layout_marginLeft="-50dp"
            android:background="@drawable/profile"
            android:layout_width="200dp"
            android:layout_height="30dp">
            <TextView
                android:drawablePadding="8dp"
                android:gravity="left|center"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoblack"
                android:text="Detail Transaksi"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="#69F8A5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="#51ED93" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="#3BDC7F" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="#2DC66E" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="#2DC56D" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="#21A85A" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="#147E40" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="#0A5128" />
    </LinearLayout>
    <LinearLayout
        android:background="#fff"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/vtamp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <LinearLayout
            android:id="@+id/linsetuju"
            android:background="@drawable/shadow"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/bselesai"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/kotak6"
                    android:gravity="center">

                    <TextView
                        android:gravity="center"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/ic_tick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoblack"
                        android:text="Selesai"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#fff" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btolak"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/kotak5"
                    android:gravity="center">

                    <TextView
                        android:gravity="center"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/ic_cross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoblack"
                        android:text="Tolak"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#E30000" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/bsetuju"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/kotak6"
                    android:gravity="center">

                    <TextView
                        android:gravity="center"
                        android:drawablePadding="8dp"
                        android:drawableLeft="@drawable/ic_tick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoblack"
                        android:text="Setuju"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="#fff" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>